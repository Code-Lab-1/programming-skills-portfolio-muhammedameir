# Invite some people to dinner.
guests = ['aref qadoori', 'abdu ali', 'yahya zift']

name = guests[0].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

name = guests[1].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

name = guests[2].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

name = guests[1].title()
print(f"\nSorry, {name} can't make it to dinner.")

# Aref can't make it! Let's invite Sharif instead.
del(guests[1])
guests.insert(1, 'sharif chakee')

# Print the invitations again.
name = guests[0].title()
print(f"\n{name}, it would be a plesure to have you over for dinner.")

name = guests[1].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

name = guests[2].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

# We got a bigger table, so let's add some more people to the list.
print("\nWe got a bigger table!")
guests.insert(0, 'yasmin zaatar')
guests.insert(2, 'maria majooj')
guests.append('salem sanfour')

name = guests[0].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

name = guests[1].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

name = guests[2].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

name = guests[3].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

name = guests[4].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

name = guests[5].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

# Oh no, the table won't arrive on time!
print("\nSorry, we can only accomodate two more people for now.")

name = guests.pop()
print(f"Sorry, {name.title()} wont be able to accommodate you due to limitations.")

name = guests.pop()
print(f"Sorry, {name.title()} wont be able to accommodate you due to limitations.")

name = guests.pop()
print(f"Sorry, {name.title()} wont be able to accommodate you due to limitations.")

name = guests.pop()
print(f"Sorry, {name.title()} wont be able to accommodate you due to limitations.")

# There should be two people left. Let's invite them.
name = guests[0].title()
print(f"{name}, please come to dinner.")

name = guests[1].title()
print(f"{name}, it would be a plesure to have you over for dinner.")

# Empty out the list.
del(guests[0])
del(guests[0])

# Prove the list is empty.
print(guests)
